# Astra Backend .env example
# Copy to .env and fill values before running in production

# Server
PORT=3000
NODE_ENV=development

# Postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astra
DB_USER=postgres
DB_PASSWORD=

# JWT
JWT_SECRET=replace_with_a_strong_random_string_min_32_chars
JWT_EXPIRY=7d

# Bcrypt
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3001

# Pterodactyl (optional)
PTERODACTYL_URL=http://localhost:8080
PTERODACTYL_API_KEY=
PTERODACTYL_NODE_ID=1
PTERODACTYL_EGG_ID=1
# Example environment variables (DO NOT commit secrets to repo)
NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=astra
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# JWT
JWT_SECRET=your_jwt_secret_key_long_and_random_here
JWT_EXPIRY=7d

# Password hashing
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGIN=http://localhost:3001
